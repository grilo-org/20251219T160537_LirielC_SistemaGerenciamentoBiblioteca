<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
    name="Dashboard" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20"
    topMargin="20" bottomMargin="20">
    
    <parameter name="DATA_GERACAO" class="java.lang.String"/>
    <parameter name="TOTAL_VENDAS" class="java.lang.String"/>
    <parameter name="TOTAL_TRANSACOES" class="java.lang.Integer"/>
    <parameter name="VENDAS_CARTAO" class="java.lang.Integer"/>
    <parameter name="VENDAS_BOLETO" class="java.lang.Integer"/>
    <parameter name="TICKET_MEDIO" class="java.lang.String"/>

    <field name="data" class="java.lang.String"/>
    <field name="valor" class="java.lang.Double"/>

    <title>
        <band height="100">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[DASHBOARD DE VENDAS]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="40" width="555" height="20"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA["Gerado em: " + $P{DATA_GERACAO}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <pageHeader>
        <band height="150">
            <frame>
                <reportElement x="0" y="0" width="555" height="150"/>
                <box>
                    <pen lineWidth="1.0"/>
                </box>
                
                <!-- Resumo Geral -->
                <staticText>
                    <reportElement x="10" y="10" width="535" height="30"/>
                    <textElement>
                        <font size="16" isBold="true"/>
                    </textElement>
                    <text><![CDATA[Resumo Geral]]></text>
                </staticText>

                <!-- Total de Vendas -->
                <staticText>
                    <reportElement x="10" y="50" width="120" height="20"/>
                    <textElement>
                        <font isBold="true"/>
                    </textElement>
                    <text><![CDATA[Total de Vendas:]]></text>
                </staticText>
                <textField>
                    <reportElement x="130" y="50" width="150" height="20"/>
                    <textFieldExpression><![CDATA["R$ " + $P{TOTAL_VENDAS}]]></textFieldExpression>
                </textField>

                <!-- Total de Transações -->
                <staticText>
                    <reportElement x="10" y="70" width="120" height="20"/>
                    <textElement>
                        <font isBold="true"/>
                    </textElement>
                    <text><![CDATA[Total de Transações:]]></text>
                </staticText>
                <textField>
                    <reportElement x="130" y="70" width="150" height="20"/>
                    <textFieldExpression><![CDATA[$P{TOTAL_TRANSACOES}]]></textFieldExpression>
                </textField>

                <!-- Ticket Médio -->
                <staticText>
                    <reportElement x="10" y="90" width="120" height="20"/>
                    <textElement>
                        <font isBold="true"/>
                    </textElement>
                    <text><![CDATA[Ticket Médio:]]></text>
                </staticText>
                <textField>
                    <reportElement x="130" y="90" width="150" height="20"/>
                    <textFieldExpression><![CDATA["R$ " + $P{TICKET_MEDIO}]]></textFieldExpression>
                </textField>

                <!-- Vendas por Tipo de Pagamento -->
                <staticText>
                    <reportElement x="300" y="50" width="120" height="20"/>
                    <textElement>
                        <font isBold="true"/>
                    </textElement>
                    <text><![CDATA[Vendas Cartão:]]></text>
                </staticText>
                <textField>
                    <reportElement x="420" y="50" width="100" height="20"/>
                    <textFieldExpression><![CDATA[$P{VENDAS_CARTAO}]]></textFieldExpression>
                </textField>

                <staticText>
                    <reportElement x="300" y="70" width="120" height="20"/>
                    <textElement>
                        <font isBold="true"/>
                    </textElement>
                    <text><![CDATA[Vendas Boleto:]]></text>
                </staticText>
                <textField>
                    <reportElement x="420" y="70" width="100" height="20"/>
                    <textFieldExpression><![CDATA[$P{VENDAS_BOLETO}]]></textFieldExpression>
                </textField>
            </frame>
        </band>
    </pageHeader>

    <columnHeader>
        <band height="30">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement>
                    <font size="16" isBold="true"/>
                </textElement>
                <text><![CDATA[Vendas por Dia]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="100" height="20"/>
                <textFieldExpression><![CDATA[$F{data}]]></textFieldExpression>
            </textField>
            <textField pattern="¤ #,##0.00">
                <reportElement x="100" y="0" width="455" height="20"/>
                <textFieldExpression><![CDATA[$F{valor}]]></textFieldExpression>
            </textField>
        </band>
    </detail>
</jasperReport> 