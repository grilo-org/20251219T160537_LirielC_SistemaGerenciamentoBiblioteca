<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
    name="DANFE" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20"
    topMargin="20" bottomMargin="20">
    
    <parameter name="NOTA_FISCAL_NUMERO" class="java.lang.String"/>
    <parameter name="DATA_EMISSAO" class="java.lang.String"/>
    <parameter name="CLIENTE_NOME" class="java.lang.String"/>
    <parameter name="CLIENTE_CPF" class="java.lang.String"/>
    <parameter name="CLIENTE_EMAIL" class="java.lang.String"/>
    <parameter name="CLIENTE_ENDERECO" class="java.lang.String"/>
    <parameter name="TIPO_PAGAMENTO" class="java.lang.String"/>
    <parameter name="VALOR_TOTAL" class="java.lang.String"/>

    <field name="codigo" class="java.lang.Long"/>
    <field name="descricao" class="java.lang.String"/>
    <field name="quantidade" class="java.lang.Integer"/>
    <field name="valorUnitario" class="java.lang.Double"/>
    <field name="valorTotal" class="java.lang.Double"/>

    <title>
        <band height="150">
            <!-- Cabeçalho com divisão em caixas -->
            <rectangle>
                <reportElement x="0" y="0" width="555" height="150"/>
            </rectangle>
            
            <!-- Divisão vertical principal -->
            <line>
                <reportElement x="370" y="0" width="1" height="150"/>
            </line>
            
            <!-- Área da esquerda -->
            <staticText>
                <reportElement x="10" y="10" width="350" height="30"/>
                <textElement>
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[BIBLIOTECA SYSTEM LTDA.]]></text>
            </staticText>
            
            <!-- Área da direita -->
            <staticText>
                <reportElement x="380" y="10" width="165" height="30"/>
                <textElement textAlignment="Center">
                    <font size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[DANFE]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="380" y="40" width="165" height="40"/>
                <textElement textAlignment="Center">
                    <font size="8"/>
                </textElement>
                <text><![CDATA[Documento Auxiliar da
Nota Fiscal Eletrônica]]></text>
            </staticText>
            
            <!-- Número da NF e Data -->
            <textField>
                <reportElement x="380" y="90" width="165" height="20"/>
                <textElement textAlignment="Center">
                    <font size="12" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["NF-e nº " + $P{NOTA_FISCAL_NUMERO}]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement x="380" y="110" width="165" height="20"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA["Data Emissão: " + $P{DATA_EMISSAO}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <pageHeader>
        <band height="130">
            <!-- Dados do Destinatário -->
            <rectangle>
                <reportElement x="0" y="0" width="555" height="130"/>
            </rectangle>
            
            <staticText>
                <reportElement x="0" y="0" width="555" height="20" backcolor="#CCCCCC"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[DESTINATÁRIO / REMETENTE]]></text>
            </staticText>
            
            <!-- Nome/Razão Social -->
            <staticText>
                <reportElement x="5" y="25" width="100" height="15"/>
                <text><![CDATA[NOME/RAZÃO SOCIAL:]]></text>
            </staticText>
            <textField>
                <reportElement x="105" y="25" width="445" height="15"/>
                <textFieldExpression><![CDATA[$P{CLIENTE_NOME}]]></textFieldExpression>
            </textField>
            
            <!-- CPF -->
            <staticText>
                <reportElement x="5" y="45" width="35" height="15"/>
                <text><![CDATA[CPF:]]></text>
            </staticText>
            <textField>
                <reportElement x="40" y="45" width="150" height="15"/>
                <textFieldExpression><![CDATA[$P{CLIENTE_CPF}]]></textFieldExpression>
            </textField>
            
            <!-- Email -->
            <staticText>
                <reportElement x="200" y="45" width="45" height="15"/>
                <text><![CDATA[EMAIL:]]></text>
            </staticText>
            <textField>
                <reportElement x="245" y="45" width="305" height="15"/>
                <textFieldExpression><![CDATA[$P{CLIENTE_EMAIL}]]></textFieldExpression>
            </textField>
            
            <!-- Endereço -->
            <staticText>
                <reportElement x="5" y="65" width="70" height="15"/>
                <text><![CDATA[ENDEREÇO:]]></text>
            </staticText>
            <textField>
                <reportElement x="75" y="65" width="475" height="15"/>
                <textFieldExpression><![CDATA[$P{CLIENTE_ENDERECO}]]></textFieldExpression>
            </textField>
            
            <!-- Forma de Pagamento -->
            <staticText>
                <reportElement x="5" y="85" width="140" height="15"/>
                <text><![CDATA[FORMA DE PAGAMENTO:]]></text>
            </staticText>
            <textField>
                <reportElement x="145" y="85" width="405" height="15"/>
                <textFieldExpression><![CDATA[$P{TIPO_PAGAMENTO}]]></textFieldExpression>
            </textField>
        </band>
    </pageHeader>

    <columnHeader>
        <band height="30">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="30" backcolor="#CCCCCC"/>
            </rectangle>
            
            <staticText>
                <reportElement x="0" y="0" width="80" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[CÓDIGO]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="80" y="0" width="200" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[DESCRIÇÃO]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="280" y="0" width="80" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[QUANT.]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="360" y="0" width="100" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[VALOR UNIT.]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="460" y="0" width="95" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[VALOR TOTAL]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="20"/>
            </rectangle>
            
            <textField>
                <reportElement x="0" y="0" width="80" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{codigo}]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement x="80" y="0" width="200" height="20"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{descricao}]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement x="280" y="0" width="80" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{quantidade}]]></textFieldExpression>
            </textField>
            
            <textField pattern="¤ #,##0.00">
                <reportElement x="360" y="0" width="100" height="20"/>
                <textElement textAlignment="Right" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{valorUnitario}]]></textFieldExpression>
            </textField>
            
            <textField pattern="¤ #,##0.00">
                <reportElement x="460" y="0" width="95" height="20"/>
                <textElement textAlignment="Right" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{valorTotal}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <summary>
        <band height="50">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="50"/>
            </rectangle>
            
            <staticText>
                <reportElement x="360" y="10" width="100" height="20"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[VALOR TOTAL:]]></text>
            </staticText>
            
            <textField>
                <reportElement x="460" y="10" width="95" height="20"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["R$ " + $P{VALOR_TOTAL}]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport> 