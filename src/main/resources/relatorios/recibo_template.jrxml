<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
    name="Recibo" pageWidth="595" pageHeight="421" columnWidth="555" leftMargin="20" rightMargin="20"
    topMargin="20" bottomMargin="20">
    
    <parameter name="RECIBO_NUMERO" class="java.lang.String"/>
    <parameter name="DATA_EMISSAO" class="java.lang.String"/>
    <parameter name="CLIENTE_NOME" class="java.lang.String"/>
    <parameter name="CLIENTE_CPF" class="java.lang.String"/>
    <parameter name="TIPO_PAGAMENTO" class="java.lang.String"/>
    <parameter name="VALOR_TOTAL" class="java.lang.String"/>
    <parameter name="VALOR_POR_EXTENSO" class="java.lang.String"/>

    <title>
        <band height="100">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[RECIBO]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="40" width="555" height="20"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA["Nº " + $P{RECIBO_NUMERO}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="60" width="555" height="20"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA["Data: " + $P{DATA_EMISSAO}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <detail>
        <band height="200">
            <textField>
                <reportElement x="0" y="20" width="555" height="60"/>
                <textElement textAlignment="Justified"/>
                <textFieldExpression><![CDATA["Recebi(emos) de " + $P{CLIENTE_NOME} + ", CPF " + $P{CLIENTE_CPF} + 
                    ", a importância de R$ " + $P{VALOR_TOTAL} + " (" + $P{VALOR_POR_EXTENSO} + 
                    ") referente à compra de livros, pago através de " + $P{TIPO_PAGAMENTO} + "."]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="120" width="555" height="20"/>
                <textElement textAlignment="Center"/>
                <text><![CDATA[Para maior clareza firmamos o presente.]]></text>
            </staticText>

            <line>
                <reportElement x="127" y="180" width="300" height="1"/>
            </line>
            <staticText>
                <reportElement x="127" y="185" width="300" height="15"/>
                <textElement textAlignment="Center"/>
                <text><![CDATA[Assinatura]]></text>
            </staticText>
        </band>
    </detail>
</jasperReport> 